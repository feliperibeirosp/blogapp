<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">

        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <a href="/postagem/{{slug}}">
            <button class="btn btn-success">Leia mais</button>
        </a>
        <hr>

        <small>{{data}}</small>
    </div>
</div>
{{else}}
<h5> Nenhuma postagem registrada!</h5>
{{/each}}